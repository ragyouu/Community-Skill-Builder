<style>
    /* Animation */
    @@keyframes scaleIn {
        0% {
            transform: scale(0.8);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    /* Modal overlay hidden by default */
    #celebration-modal {
        position: fixed;
        inset: 0;
        z-index: 50;
        display: none; /* HIDDEN by default */
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.5);
    }

        #celebration-modal.show {
            display: flex; /* visible when .show is added */
        }

    /* Modal content box */
    .celebration-content {
        background-color: white;
        padding: 2rem;
        border-radius: 1rem;
        text-align: center;
        max-width: 400px;
        width: 100%;
        animation: scaleIn 0.3s ease-out;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    /* Headline */
    .celebration-title {
        font-size: 1.75rem;
        font-weight: bold;
        color: #344AEA;
        margin-bottom: 1rem;
    }

    /* Description */
    .celebration-text {
        color: #4A4A4A;
        margin-bottom: 1.5rem;
    }

    .celebration-navbar-disabled {
        pointer-events: none;
        opacity: 0.5;
        filter: grayscale(100%);
    }

    /* Buttons */
    .celebration-button {
        padding: 0.6rem 1.5rem;
        background-color: #344AEA;
        color: white;
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.2s ease;
    }

        .celebration-button:hover {
            background-color: #2a3ec1;
        }

    /* Close X button */
    .close-button {
        position: absolute;
        top: 0.5rem;
        right: 0.75rem;
        font-size: 1.25rem;
        color: #999;
        background: none;
        border: none;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .close-button:hover {
            color: #333;
        }
</style>

<!-- Celebration Modal -->
<div id="celebration-modal">
    <div class="celebration-content">
        <button class="close-button" onclick="hideCelebrationModal()">&times;</button>
        <h2 class="celebration-title">🎉 Achievement Unlocked!</h2>
        <p class="celebration-text">You’ve successfully unlocked an achievement.</p>
        <p class="celebration-threads" style="font-weight:bold; color:#344AEA; margin-bottom:1rem;"></p>
        <button onclick="hideCelebrationModal()" class="celebration-button">Great</button>
    </div>
</div>

<script>
    function showAchievementCelebration(title = "Achievement Unlocked!", description = "", threads = 0) {
        const modal = document.getElementById("celebration-modal");
        modal.querySelector(".celebration-title").textContent = `🎉 ${title}`;
        modal.querySelector(".celebration-text").textContent = description;
        modal.querySelector(".celebration-threads").textContent = threads > 0 ? `+${threads} Threads!` : "";

        // Show confetti
        confetti({ particleCount: 200, spread: 80, origin: { y: 0.6 } });

        // Show modal
        modal.classList.add("show");

        // Disable navbar interactions
        document.querySelector("nav").classList.add("celebration-navbar-disabled");

        // Optional: prevent background clicks
        modal.addEventListener('click', (e) => {
            if (e.target === modal) e.stopPropagation();
        });
    }

    function hideCelebrationModal() {
        const modal = document.getElementById("celebration-modal");
        modal.classList.remove("show");

        // Re-enable navbar
        document.querySelector("nav").classList.remove("celebration-navbar-disabled");

        // Reload page **only when user clicks the button**
        location.reload();
    }
</script>