<script>
    document.addEventListener("DOMContentLoaded", () => {
        // --- Search functionality ---
        const searchInput = document.getElementById("userCommunitySearch");
        const searchBtn = document.getElementById("userCommunitySearchBtn");
        const rows = document.querySelectorAll(".user-community-card");
        const emptyMsg = document.querySelector(".user-community-empty");
        let modalOpen = false;

        function filter() {
            const query = searchInput.value.toLowerCase().trim();
            let anyVisible = false;

            rows.forEach(card => {
                const title = card.querySelector(".user-community-title").innerText.toLowerCase();
                const description = card.querySelector(".user-community-description").innerText.toLowerCase();
                const isVisible = title.includes(query) || description.includes(query);

                card.parentElement.style.display = isVisible ? "flex" : "none";
                if (isVisible) anyVisible = true;
            });

            emptyMsg.classList.toggle("active", !anyVisible);
        }

        searchBtn.addEventListener("click", filter);
        searchInput.addEventListener("keydown", e => {
            if (e.key === "Enter") {
                e.preventDefault();
                filter();
            }
        });

        // --- Community detail UI ---
        const communityListContainer = document.querySelector(".user-communities-section");
        const communityDetailContainer = document.getElementById("communityDetailContainer");
        const communityTitle = document.getElementById("communityTitle");
        const backBtn = document.getElementById("communityBackBtn");

        const tabs = document.querySelectorAll(".community-tab");
        const tabContents = {
            pending: document.getElementById("communityTabPending"),
            all: document.getElementById("communityTabAll")
        };

        rows.forEach(card => {
            card.addEventListener("click", async () => {
                const communityId = card.dataset.communityId;
                const name = card.querySelector(".user-community-title").innerText;
                communityTitle.innerText = name;

                communityListContainer.style.display = "none";
                communityDetailContainer.style.display = "flex";

                // ---- DYNAMIC MEMBER LOADING ----
                const allMembersContainer = document.getElementById("communityTabAll");
                if (allMembersContainer) allMembersContainer.innerHTML = "<div class='no-members'>Loading members...</div>";

                try {
                    const response = await fetch(`/Community/GetMembersPartial?communityId=${communityId}`);
                    if (!response.ok) throw new Error("Failed to load members");
                    const html = await response.text();
                    allMembersContainer.innerHTML = html;
                } catch (err) {
                    allMembersContainer.innerHTML = "<div class='no-members'>Failed to load members.</div>";
                    console.error(err);
                }

                const pendingContainer = document.getElementById("communityTabPending");
                if (pendingContainer) pendingContainer.innerHTML = "<div class='no-requests'>Loading pending requests...</div>";

                try {
                    const response = await fetch(`/Community/GetPendingRequestsPartial?communityId=${communityId}`);
                    if (!response.ok) throw new Error("Failed to load pending requests");
                    const html = await response.text();
                    pendingContainer.innerHTML = html;
                } catch (err) {
                    pendingContainer.innerHTML = "<div class='no-requests'>Failed to load pending requests.</div>";
                    console.error(err);
                }
            });
        });

        backBtn.addEventListener("click", () => {
            communityDetailContainer.style.display = "none";
            communityListContainer.style.display = "flex";
        });

        tabs.forEach(tab => {
            tab.addEventListener("click", () => {
                tabs.forEach(t => t.classList.remove("active"));
                tab.classList.add("active");

                const tabName = tab.dataset.tab;
                for (const key in tabContents) {
                    tabContents[key].classList.toggle("active", key === tabName);
                }
            });
        });

        // --- Edit Community Modal Logic ---
        const editModal = document.getElementById("editCommunityModal");
        const closeEditModal = document.getElementById("closeEditCommunityModal");
        const editForm = document.getElementById("editCommunityForm");
        const saveBtn = editForm.querySelector(".save-btn");
        const cancelBtn = editForm.querySelector(".cancel-btn");

        const nameInput = document.getElementById("editCommunityName");
        const descInput = document.getElementById("editCommunityDescription");
        const bannerPreview = document.getElementById("editCommunityBannerPreview");
        const avatarPreview = document.getElementById("editCommunityAvatarPreview");
        const bannerInput = document.getElementById("editCommunityBanner");
        const avatarInput = document.getElementById("editCommunityAvatar");
        const categorySelect = document.getElementById("editCommunityCategory");
        const idInput = document.getElementById("editCommunityId");

        let originalData = {};
        let formChanged = false;

        // -------------------- FILE VALIDATION SETTINGS --------------------
        const fileRules = {
            image: {
                maxSize: 20 * 1024 * 1024, // 20 MB
                allowed: [".jpg", ".jpeg", ".png", ".gif", ".webp"]
            }
        };

        // Add error message spans below avatar/banner
        [avatarInput, bannerInput].forEach(input => {
            if (!input.parentElement.querySelector(".file-error")) {
                const error = document.createElement("span");
                error.className = "file-error";
                error.style.color = "red";
                error.style.fontSize = "0.85rem";
                error.style.display = "none";
                input.insertAdjacentElement("afterend", error);
            }
        });

        function validateFile(input) {
            const file = input.files[0];
            const errorEl = input.parentElement.querySelector(".file-error");
            if (!file || !errorEl) return true;

            errorEl.textContent = "";
            errorEl.style.display = "none";

            const { maxSize, allowed } = fileRules.image;
            const ext = file.name.toLowerCase().substring(file.name.lastIndexOf("."));

            if (!allowed.includes(ext)) {
                errorEl.textContent = `Invalid file type. Allowed: ${allowed.join(", ")}`;
                errorEl.style.display = "block";
                input.value = "";
                return false;
            }

            if (file.size > maxSize) {
                errorEl.textContent = `File too large. Max size is 20 MB.`;
                errorEl.style.display = "block";
                input.value = "";
                return false;
            }

            return true;
        }

        // File preview and validation
        [bannerInput, avatarInput].forEach(input => {
            input.addEventListener("change", e => {
                if (!validateFile(input)) return;
                const file = e.target.files[0];
                if (file) {
                    const preview = e.target.id.includes("Banner") ? bannerPreview : avatarPreview;
                    preview.src = URL.createObjectURL(file);
                    checkFormChanges();
                }
            });
        });

        // --- Open modal on "Edit" click ---
        document.querySelectorAll(".user-community-edit-btn").forEach(btn => {
            btn.addEventListener("click", e => {
                e.stopPropagation();

                const card = btn.closest(".user-community-card");

                const name = card.querySelector(".user-community-title").innerText.replace(/^Community Name:\s*/i, "");
                const desc = card.querySelector(".user-community-description").innerText.replace(/^Description:\s*/i, "");
                const avatar = card.querySelector(".user-community-avatar").src;
                const banner = card.dataset.banner || "";
                const category = card.dataset.category || ""; // <-- get current category

                idInput.value = card.dataset.communityId;
                nameInput.value = name;
                descInput.value = desc;
                avatarPreview.src = avatar || "";
                bannerPreview.src = banner || "";

                // <-- dynamically preload the category
                const categoryValue = card.dataset.category || "";
                for (let opt of categorySelect.options) {
                    opt.selected = (opt.value === categoryValue);
                }

                originalData = { name, desc, avatar, banner, category };

                saveBtn.disabled = true;
                formChanged = false;

                editModal.style.display = "flex";
                editModal.querySelector(".user-community-modal").style.display = "block";
                document.body.style.overflow = "hidden";
                modalOpen = true;
            });
        });

        // --- Close modal only with X or Cancel ---
        closeEditModal.addEventListener("click", () => {
            editForm.reset();
            editModal.style.display = "none";
            editModal.querySelector(".user-community-modal").style.display = "none";
            document.body.style.overflow = "";
            modalOpen = false;
            formChanged = false; // ✅ reset unsaved flag
        });

        cancelBtn.addEventListener("click", () => {
            editForm.reset();
            editModal.style.display = "none";
            editModal.querySelector(".user-community-modal").style.display = "none";
            document.body.style.overflow = "";
            modalOpen = false;
            formChanged = false; // ✅ reset unsaved flag
        });

        // Remove "click outside" close behavior (intentionally)

        // --- Detect real changes ---
        function checkFormChanges() {
            const current = {
                name: nameInput.value,
                desc: descInput.value,
                category: categorySelect.value,
                avatar: avatarPreview.src,
                banner: bannerPreview.src
            };

            const changed = Object.keys(current).some(k => current[k] !== originalData[k]);
            saveBtn.disabled = !changed;
            formChanged = changed;
        }

        // Watch inputs for changes
        [nameInput, descInput, categorySelect].forEach(input => {
            input.addEventListener("input", checkFormChanges);
        });

        // --- Warn before leaving if unsaved changes ---
        window.addEventListener("beforeunload", e => {
            if (modalOpen && formChanged) {
                e.preventDefault();
                e.returnValue = "";
            }
        });

        // --- Handle form submission ---
        editForm.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData();
            let categoryToSend = categorySelect.value;
            if (categoryToSend === "Others") {
                categoryToSend = customCategoryInput.value.trim();
            }
            formData.append("Id", idInput.value);
            formData.append("Name", nameInput.value);
            formData.append("Description", descInput.value);
            formData.append("Category", categoryToSend);
            if (bannerInput.files[0]) formData.append("Banner", bannerInput.files[0]);
            if (avatarInput.files[0]) formData.append("Avatar", avatarInput.files[0]);

            try {
                const response = await fetch("/Community/Edit", {
                    method: "POST",
                    body: formData
                });
                const result = await response.json();

                if (result.success) {

                    const card = document.querySelector(`[data-community-id='${idInput.value}']`);
                    if (card) {
                        card.querySelector(".user-community-title").innerText = nameInput.value;
                        card.querySelector(".user-community-description").innerText = descInput.value;
                        card.querySelector(".user-community-avatar").src = avatarPreview.src;
                        card.dataset.banner = result.community.bannerUrl;
                        card.dataset.category = result.community.category;
                    }

                    editModal.style.display = "none";
                    document.body.style.overflow = "";
                    formChanged = false;

                    window.location.reload();
                } else {
                    alert(result.message || "Update failed.");
                }
            } catch (err) {
                console.error("Edit error:", err);
                alert("Something went wrong while saving.");
            }
        });

        // --- Delete Community Modal Logic ---
        const deleteModal = document.getElementById("deleteCommunityModal");
        const closeDeleteModal = document.getElementById("closeDeleteCommunityModal");
        const deleteCancelBtn = document.getElementById("deleteCancelBtn");
        const deleteConfirmBtn = document.getElementById("deleteConfirmBtn");

        let communityToDeleteId = null;

        // Open modal on Delete button click
        document.querySelectorAll(".user-community-delete-btn").forEach(btn => {
            btn.addEventListener("click", e => {
                e.stopPropagation();

                const card = btn.closest(".user-community-card");
                communityToDeleteId = card.dataset.communityId;

                deleteModal.style.display = "flex";
                const innerModal = deleteModal.querySelector(".user-community-modal");
                if (innerModal) innerModal.style.display = "block";

                document.body.style.overflow = "hidden";
                modalOpen = true;
            });
        });

        // Close modal handlers
        [closeDeleteModal, deleteCancelBtn].forEach(el => {
            el.addEventListener("click", () => {
                deleteModal.style.display = "none";
                const innerModal = deleteModal.querySelector(".user-community-modal");
                if (innerModal) innerModal.style.display = "none";
                document.body.style.overflow = "";
                modalOpen = false;
                communityToDeleteId = null;
            });
        });

        // Confirm deletion
        deleteConfirmBtn.addEventListener("click", async () => {
            if (!communityToDeleteId) return;

            try {
                // Create FormData to send communityId
                const formData = new FormData();
                formData.append("communityId", communityToDeleteId);

                const response = await fetch("/Community/Delete", {
                    method: "POST",
                    body: formData
                });

                let result;
                try {
                    result = await response.json();
                } catch {
                    const text = await response.text();
                    console.error("Delete response is not JSON:", text);
                    alert("Unexpected server response.");
                    return;
                }

                if (result.success) {
                    // Remove card from UI
                    const card = document.querySelector(`[data-community-id='${communityToDeleteId}']`);
                    if (card) card.parentElement.remove();

                    deleteModal.style.display = "none";
                    document.body.style.overflow = "";
                    modalOpen = false;
                    communityToDeleteId = null;

                    window.location.reload();
                } else {
                    alert(result.message || "Failed to delete community.");
                }
            } catch (err) {
                console.error("Delete error:", err);
                alert("Something went wrong while deleting the community.");
            }
        });

            const customCategoryInput = document.getElementById("editCommunityCustomCategory");

        // Show input if "Others" is selected
        categorySelect.addEventListener("change", () => {
            if (categorySelect.value === "Others") {
                customCategoryInput.style.display = "block";
                customCategoryInput.required = true;
            } else {
                customCategoryInput.style.display = "none";
                customCategoryInput.required = false;
            }
            checkFormChanges();
        });

        // Preload custom category if the current category is not in the list
        const currentCategory = originalData.category;
        if (currentCategory && !Array.from(categorySelect.options).some(opt => opt.value === currentCategory)) {
            categorySelect.value = "Others";
            customCategoryInput.value = currentCategory;
            customCategoryInput.style.display = "block";
            customCategoryInput.required = true;
        }

    });

    const topTabs = document.querySelectorAll(".community-tab-top");
    const myTab = document.getElementById("myCommunitiesTab");
    const joinedTab = document.getElementById("joinedCommunitiesTab");

    topTabs.forEach(tab => {
        tab.addEventListener("click", () => {
            topTabs.forEach(t => t.classList.remove("active"));
            tab.classList.add("active");

            const type = tab.dataset.tab;
            myTab.classList.toggle("active", type === "my-communities");
            joinedTab.classList.toggle("active", type === "joined-communities");
        });
    });
</script>