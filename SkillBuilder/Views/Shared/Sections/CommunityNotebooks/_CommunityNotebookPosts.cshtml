<script>
    let selectedPostId = null;
    let selectedAdminPostId = null;
    let reportPostId = null;

    const postsPerPage = 10;
    let currentPage = 1;
    const allPosts = @Html.Raw(Json.Serialize(Model.Select(p => new {
        id = p.Id,
        title = p.Title,
        content = p.Content,
        imageUrl = p.ImageUrl,
        authorName = p.AuthorName,
        authorAvatarUrl = p.AuthorAvatarUrl,
        communityName = p.CommunityName,
        submittedAt = p.SubmittedAt,
        category = p.Category,
        commentsCount = p.CommentsCount,
        authorId = p.AuthorId
    })));

    // ---------------- Post Options Menu ----------------
    function togglePostMenu(postId) {
        const menu = document.getElementById(`post-menu-${postId}`);
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    // ---------------- Comments ----------------
    function toggleComments(postId) {
        const section = document.getElementById(`comments-section-${postId}`);
        section.style.display = section.style.display === 'none' ? 'flex' : 'none';
    }

    // ---------------- Add Comment ----------------
    const currentUserId = "@currentUserId";
    const currentUserFirstName = "@currentUserFirstName";
    const currentUserLastName = "@currentUserLastName";
    const currentUserAvatar = "@currentUserAvatar";
    const userDisabled = @userDisabled.ToString().ToLower();

    function getPostComments(){ return JSON.parse(localStorage.getItem("postComments")) || {}; }
    function setPostComments(comments){ localStorage.setItem("postComments", JSON.stringify(comments)); }

    function addComment(postId) {
        if (userDisabled) return;

        const input = document.getElementById(`comment-input-${postId}`);
        const text = input.value.trim();
        if (!text) return;

        // 1️⃣ Create a consistent comment object with unique id
        const comment = {
            id: `c_${Date.now()}_${Math.random().toString(36).slice(2)}`,
            userId: currentUserId,
            firstName: currentUserFirstName,
            lastName: currentUserLastName,
            avatarUrl: currentUserAvatar || "/images/default-avatar.png",
            text,
            createdAt: new Date().toISOString()
        };

        // 2️⃣ Retrieve and update saved comments
        let saved = getPostComments();
        if (!saved[postId]) saved[postId] = [];
        saved[postId].push(comment);

        // 3️⃣ Persist to localStorage
        localStorage.setItem("postComments", JSON.stringify(saved));

        // 4️⃣ Render immediately (real-time)
        renderComment(postId, comment);

        // 5️⃣ Update count instantly
        const countEl = document.getElementById(`comment-count-${postId}`);
        if (countEl) countEl.innerText = saved[postId].length;

        // 6️⃣ Clear input
        input.value = '';
    }

    function renderComment(postId, comment) {
        const commentList = document.getElementById(`comments-list-${postId}`);
        if (!commentList) return; // prevent null error

        const commentId = comment.id || `c_${Date.now()}_${Math.random().toString(36).slice(2)}`;

        const commentItem = document.createElement("div");
        commentItem.classList.add("comment");
        commentItem.dataset.commentId = commentId;

        // Only show delete if owner or admin
        const isOwner = comment.userId === currentUserId;
        const isAdmin = "@currentUserIsAdmin".toLowerCase() === "true";
        const showDelete = isOwner || isAdmin;

        commentItem.innerHTML = `
            <div class="avatar" style="background-image:url('${comment.avatarUrl || "/images/default-avatar.png"}')"></div>
            <div class="comment-body">
                <div class="comment-header">
                    <div class="comment-author">
                        <strong>${comment.firstName || "Anonymous"} ${comment.lastName || ""}</strong>
                        <span class="timestamp">${timeAgo(comment.createdAt)}</span>
                    </div>
                    ${showDelete
                        ? `<button class="comment-delete-btn" onclick="confirmDelete(${postId}, '${commentId}')">🗑️</button>`
                        : ""}
                </div>
                <div class="comment-text">${comment.text}</div>
            </div>
        `;

        commentList.appendChild(commentItem);
    }

    function deleteComment(postId, commentId) {
        const saved = getPostComments();
        if (!saved[postId]) return;

        // Remove from localStorage
        saved[postId] = saved[postId].filter(c => c.id !== commentId);
        localStorage.setItem("postComments", JSON.stringify(saved));

        // Remove from DOM
        const commentList = document.getElementById(`comments-list-${postId}`);
        const commentItem = commentList.querySelector(`[data-comment-id='${commentId}']`);
        if (commentItem) commentItem.remove();

        // Update count
        const countEl = document.getElementById(`comment-count-${postId}`);
        if (countEl) countEl.innerText = saved[postId].length;

        console.log(`✅ Comment ${commentId} deleted from post ${postId}`);
    }

    function timeAgo(timestamp){
        const diff = Math.floor((new Date() - new Date(timestamp))/1000);
        if(diff<60) return `${diff} seconds ago`;
        if(diff<3600) return `${Math.floor(diff/60)} minutes ago`;
        if(diff<86400) return `${Math.floor(diff/3600)} hours ago`;
        if(diff<604800) return `${Math.floor(diff/86400)} days ago`;
        return `${Math.floor(diff/604800)} weeks ago`;
    }

    function renderPosts(posts) {
        const container = document.getElementById("postsContainer");
        container.innerHTML = "";

        if (!posts || posts.length === 0) {
            document.getElementById("noPostsFound").style.display = "block";
            return;
        } else {
            document.getElementById("noPostsFound").style.display = "none";
        }

        const start = (currentPage - 1) * postsPerPage;
        const end = start + postsPerPage;
        const pagePosts = posts.slice(start, end);

        const currentUserIsAdmin = "@currentUserIsAdmin".toLowerCase() === "true";
        const currentUserId = "@currentUserId";

        pagePosts.forEach(post => {
            const postDiv = document.createElement("div");
            postDiv.className = "post-card";
            postDiv.dataset.postId = post.id;
            postDiv.dataset.title = post.title;
            postDiv.dataset.image = post.imageUrl || "";

            postDiv.innerHTML = `
                <div class="post-card-header">
                    <div class="avatar" style="background-image:url('${post.authorAvatarUrl || '/images/default-avatar.png'}')"></div>
                    <div class="community-info">
                        <h5>${post.authorName}</h5>
                        <h6>
                            ${post.communityName} • ${new Date(post.submittedAt).toLocaleDateString()}
                            ${post.category ? `<br><span class="post-category">Category: ${post.category}</span>` : ""}
                        </h6>
                    </div>

                    <!-- 3-dot menu -->
                    <div class="post-options">
                        <button class="post-options-btn" onclick="togglePostMenu(${post.id})">⋮</button>
                        <div class="post-options-menu" id="post-menu-${post.id}">
                            ${
                                currentUserIsAdmin
                                    ? `<button onclick="openAdminDeleteModal(${post.id})">Delete Post (Admin)</button>`
                                    : (post.authorId === currentUserId
                                        ? `<button onclick="openEditPostModal(${post.id})">Edit Post</button>
                                           <button onclick="openDeletePostModal(${post.id})">Delete Post</button>`
                                        : `<button class="report" onclick="reportPost(${post.id})">Report Post</button>`
                                      )
                            }
                        </div>
                    </div>
                </div>

                <div class="post-card-content">
                    ${post.title ? `<h4 style="margin:0 0 0.5rem 0; font-weight:600;">${post.title}</h4>` : ""}
                    <p>${post.content}</p>
                    ${post.imageUrl ? `<img src="${post.imageUrl}" alt="Post image" />` : ""}
                    <div class="community-meta">
                        <button class="comment-btn" style="background: none; border: none;" onclick="toggleComments(${post.id})">💬 <span id="comment-count-${post.id}">${post.commentsCount || 0}</span></button>
                    </div>
                </div>

                <div class="comments-section" id="comments-section-${post.id}" style="display:none; flex-direction:column; gap:0.5rem;">
                    <div class="comments-list" id="comments-list-${post.id}"></div>
                    <textarea id="comment-input-${post.id}" style="resize:none;" placeholder="Write a comment..." rows="2"></textarea>
                    <button onclick="addComment(${post.id})">Post Comment</button>
                </div>
            `;

            container.appendChild(postDiv);
        });

        renderPagination(posts.length);

        // Restore previously saved comments
        const saved = getPostComments();
        pagePosts.forEach(post => {
            if (saved[post.id]) {
                saved[post.id].forEach(c => renderComment(post.id, c));
                const countEl = document.getElementById(`comment-count-${post.id}`);
                if (countEl) countEl.innerText = saved[post.id].length;
            }
        });
    }

    function renderPagination(totalPosts) {
        const totalPages = Math.ceil(totalPosts / postsPerPage);
        const pagination = document.getElementById("pagination");
        pagination.innerHTML = "";

        if (totalPages <= 1) return;

        for (let i = 1; i <= totalPages; i++) {
            const btn = document.createElement("button");
            btn.innerText = i;
            btn.className = i === currentPage ? "active-page" : "";
            btn.addEventListener("click", () => {
                currentPage = i;
                renderPosts(allPosts);
            });
            pagination.appendChild(btn);
        }
    }

    // Initial render
    document.addEventListener("DOMContentLoaded", () => {
        renderPosts(allPosts);
    });

    // Restore comments on load
    document.addEventListener('DOMContentLoaded', () => {

        const storedPosts = JSON.parse(localStorage.getItem('allPosts')) || [];
        renderPosts(storedPosts.length ? storedPosts : allPosts);

        const saved = getPostComments();
        for (let pid in saved) {
            const list = document.getElementById(`comments-list-${pid}`);
            if (!list) continue;
            const countEl = document.getElementById(`comment-count-${pid}`);
            if (countEl) countEl.innerText = saved[pid].length;
        }

        if (userDisabled) {
            document.querySelectorAll(".comment-btn, .comments-section textarea, .comments-section button")
                .forEach(el => {
                    el.disabled = true;
                    el.style.cursor = 'not-allowed';
                });
        }

        // --- Delete Comment Confirmation Modal Logic ---
        const deleteCommentModal = document.getElementById("deleteCommentModal");
        const confirmDeleteBtn = document.getElementById("confirmDeleteCommentBtn");
        const cancelDeleteBtn = document.getElementById("cancelDeleteCommentBtn");

        let pendingDelete = { postId: null, commentId: null };

        if (deleteCommentModal) {
            // Make global for inline onclick
            window.confirmDelete = function(postId, commentId) {
                pendingDelete = { postId, commentId };
                deleteCommentModal.classList.add("show");
            }

            if (confirmDeleteBtn) {
                confirmDeleteBtn.addEventListener("click", () => {
                    if (pendingDelete.postId && pendingDelete.commentId) {
                        deleteComment(pendingDelete.postId, pendingDelete.commentId);
                    }
                    deleteCommentModal.classList.remove("show");
                    pendingDelete = { postId: null, commentId: null };
                });
            }

            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener("click", () => {
                    deleteCommentModal.classList.remove("show");
                    pendingDelete = { postId: null, commentId: null };
                });
            }
        }

        const adminDeleteModal = document.getElementById("adminDeletePostModal");
        if (!adminDeleteModal) return;

        const cancelBtn = adminDeleteModal.querySelector(".community-details-posts-btn.secondary");
        const deleteBtn = adminDeleteModal.querySelector(".community-details-posts-btn.primary");

        // Open modal when admin clicks a delete button
        document.querySelectorAll(".delete-post-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                selectedAdminPostId = btn.getAttribute("data-post-id");
                adminDeleteModal.style.display = "flex";
            });
        });

        // Cancel button closes modal
        cancelBtn.addEventListener("click", () => {
            adminDeleteModal.style.display = "none";
            selectedAdminPostId = null;
        });

        // Confirm delete button sends request
        deleteBtn.addEventListener("click", async () => {
            if (!selectedAdminPostId) return;

            try {
                const res = await fetch("/Community/AdminDeletePost", {
                    method: "POST",
                    body: new URLSearchParams({ postId: selectedAdminPostId }),
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });

                const data = await res.json();

                if (res.ok && data.success) {
                    // ✅ Clear related comments in localStorage
                    const savedComments = JSON.parse(localStorage.getItem("postComments")) || {};
                    delete savedComments[selectedAdminPostId];
                    localStorage.setItem("postComments", JSON.stringify(savedComments));

                    // ✅ Smoothly remove post card
                    const postCard = document.querySelector(`.post-card[data-post-id='${selectedAdminPostId}']`);
                    if (postCard) {
                        postCard.style.transition = "opacity 0.3s";
                        postCard.style.opacity = "0";
                        setTimeout(() => postCard.remove(), 300);
                    }

                    // Close modal
                    adminDeleteModal.style.display = "none";
                    selectedAdminPostId = null;
                    window.location.reload();
                } else {
                    alert(data.message || "Failed to delete post.");
                }
            } catch (err) {
                console.error("Admin delete post error:", err);
                alert("An error occurred while deleting the post.");
            }
        });
    });

    // ---------------- Image Preview for Edit Post ----------------
    const editPostImageInput = document.getElementById('communityDetailsEditPostImage');
    const editPostImagePreview = document.getElementById('communityDetailsEditPostImagePreview');
    const removeImageBtn = document.getElementById('communityDetailsEditRemoveImageBtn');
    let removeImageFlag = false;

    // ---------------- Edit Post ----------------
    const editTitleInput = document.getElementById('communityDetailsEditPostTitle');
    const editContentInput = document.getElementById('communityDetailsEditPostContent');
    const saveBtn = document.getElementById('communityDetailsEditSaveBtn');

    let originalTitle = '';
    let originalContent = '';
    let originalImageUrl = '';

    function openEditPostModal(postId) {
        selectedPostId = postId;
        const postCard = document.querySelector(`.post-card[data-post-id='${postId}']`);

        const title = postCard.dataset.title || '';
        const content = postCard.querySelector('.post-card-content p')?.innerText || '';
        const imageUrl = postCard.dataset.image || '';

        originalTitle = title;
        originalContent = content;
        originalImageUrl = imageUrl;
        removeImageFlag = false;

        editTitleInput.value = title;
        editContentInput.value = content;

        if (imageUrl) {
            editPostImagePreview.src = imageUrl;
            editPostImagePreview.style.display = 'block';
            removeImageBtn.style.display = 'inline-block';
        } else {
            editPostImagePreview.style.display = 'none';
            removeImageBtn.style.display = 'none';
        }

        saveBtn.disabled = true;
        document.getElementById('communityDetailsEditPostModal').style.display = 'flex';
    }

    // Create a validation message element under the file input
    let fileValidationMessage = document.createElement('div');
    fileValidationMessage.style.color = 'red';
    fileValidationMessage.style.fontSize = '0.85rem';
    fileValidationMessage.style.marginTop = '0.25rem';
    editPostImageInput.parentNode.appendChild(fileValidationMessage);

    editPostImageInput.addEventListener('change', function () {
        const file = this.files[0];
        const maxSizeKB = 700;

        if (file) {
            if (file.size / 1024 > maxSizeKB) {
                // Show red text instead of alert
                fileValidationMessage.innerText = `File is too large. Maximum allowed size is 700 KB.`;
                this.value = ''; // Clear the file input
                editPostImagePreview.style.display = 'none';
                removeImageBtn.style.display = 'none';
                removeImageFlag = false;
                toggleSaveButton();
                return;
            } else {
                fileValidationMessage.innerText = ''; // Clear any previous error
            }

            // Show preview
            const reader = new FileReader();
            reader.onload = function (e) {
                editPostImagePreview.src = e.target.result;
                editPostImagePreview.style.display = 'block';
                removeImageBtn.style.display = 'inline-block';
                removeImageFlag = false;
                toggleSaveButton();
            };
            reader.readAsDataURL(file);
        } else {
            // No file selected
            fileValidationMessage.innerText = '';
            editPostImagePreview.style.display = 'none';
            removeImageBtn.style.display = 'none';
            toggleSaveButton();
        }
    });

    removeImageBtn.addEventListener('click', () => {
        editPostImagePreview.src = '';
        editPostImagePreview.style.display = 'none';
        editPostImageInput.value = '';
        removeImageBtn.style.display = 'none';
        removeImageFlag = true;
        toggleSaveButton();
    });

    // Detect text changes
    [editTitleInput, editContentInput].forEach(el => {
        el.addEventListener('input', toggleSaveButton);
    });

    function toggleSaveButton() {
        const hasChanges =
            editTitleInput.value.trim() !== originalTitle ||
            editContentInput.value.trim() !== originalContent ||
            removeImageFlag ||
            editPostImageInput.files.length > 0;

        saveBtn.disabled = !hasChanges;
    }

    document.getElementById('communityDetailsEditCancelBtn').addEventListener('click', ()=>{
        document.getElementById('communityDetailsEditPostModal').style.display='none';
    });

    document.getElementById('communityDetailsEditPostForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const title = document.getElementById('communityDetailsEditPostTitle').value.trim();
        const content = document.getElementById('communityDetailsEditPostContent').value.trim();
        const imageFile = document.getElementById('communityDetailsEditPostImage').files[0];

        if (!title || !content) return;

        const formData = new FormData();
        formData.append('PostId', selectedPostId);
        formData.append('Title', title);
        formData.append('Content', content);
        if (imageFile) formData.append('Image', imageFile);
        formData.append('RemoveImage', removeImageFlag);

        try {
            const res = await fetch('/Community/EditPost', { method: 'POST', body: formData });
            const data = await res.json();

            if (data.success) {
                document.getElementById('communityDetailsEditPostModal').style.display = 'none';
                window.location.reload();

            } else {
                alert(data.message || 'Failed to update post');
            }
        } catch (e) {
            console.error(e);
            alert('Error editing post');
        }
    });

    // ---------------- Delete Post ----------------
    function openDeletePostModal(postId){
        selectedPostId = postId;
        document.getElementById('communityDetailsDeletePostModal').style.display='flex';
    }

    function communityDetailsCloseDeletePostModal(){
        document.getElementById('communityDetailsDeletePostModal').style.display='none';
    }

    async function communityDetailsConfirmDeletePost(){
        try{
            const res = await fetch('/Community/DeletePost', {
                method:'POST',
                body: new URLSearchParams({ PostId:selectedPostId })
            });
            const data = await res.json();
            if(data.success){

                // 🧹 Delete from localStorage
                let savedComments = JSON.parse(localStorage.getItem("postComments")) || {};
                delete savedComments[selectedPostId];
                localStorage.setItem("postComments", JSON.stringify(savedComments));

                // 🗑️ Remove the post card from DOM
                const postCard = document.querySelector(`.post-card[data-post-id='${selectedPostId}']`);
                if (postCard) postCard.remove();

                // 🧼 Also clear comments list in case it's visible
                const commentsList = document.getElementById(`comments-list-${selectedPostId}`);
                if (commentsList) commentsList.innerHTML = '';

                const commentsSection = document.getElementById(`comments-section-${selectedPostId}`);
                if (commentsSection) commentsSection.style.display = 'none';

                communityDetailsCloseDeletePostModal();
                window.location.reload();

            } else {
                alert(data.message || 'Failed to delete post');
            }
        } catch(e){
            console.error(e);
            alert('Error deleting post');
        }
    }

    // ---------------- Admin Delete Post ----------------
    function openAdminDeleteModal(postId) {
        selectedAdminPostId = postId;
        document.getElementById('adminDeletePostModal').style.display = 'flex';
    }

    async function confirmAdminDeletePost() {
        try {
            // ✅ Use correct admin endpoint
            const res = await fetch('/Community/AdminDeletePost', {
                method: 'POST',
                body: new URLSearchParams({ postId: selectedAdminPostId }), // lowercase key matches backend
                headers: { "X-Requested-With": "XMLHttpRequest" }
            });

            const data = await res.json();

            if (res.ok && data.success) {
                // ✅ Clear related comments in localStorage
                const savedComments = JSON.parse(localStorage.getItem("postComments")) || {};
                delete savedComments[selectedAdminPostId];
                localStorage.setItem("postComments", JSON.stringify(savedComments));

                // ✅ Remove post card from DOM
                const postCard = document.querySelector(`.post-card[data-post-id='${selectedAdminPostId}']`);
                if (postCard) {
                    postCard.style.transition = "opacity 0.3s";
                    postCard.style.opacity = "0";
                    setTimeout(() => postCard.remove(), 300);
                }

                // ✅ Clean up UI
                const commentsList = document.getElementById(`comments-list-${selectedAdminPostId}`);
                if (commentsList) commentsList.innerHTML = '';

                const commentsSection = document.getElementById(`comments-section-${selectedAdminPostId}`);
                if (commentsSection) commentsSection.style.display = 'none';

                document.getElementById('adminDeletePostModal').style.display = 'none';

                // Optional: reload if you want to refresh the list
                window.location.reload();
            } else {
                alert(data.message || 'Failed to delete post.');
            }
        } catch (e) {
            console.error("Admin delete post error:", e);
            alert('An error occurred while deleting the post.');
        }
    }

    // ---------------- Report Post ----------------
    function reportPost(postId){
        reportPostId = postId;
        document.getElementById('communityDetailsReportModal').style.display='flex';
    }

    document.getElementById('communityDetailsReportCancelBtn').addEventListener('click', ()=>{
        document.getElementById('communityDetailsReportModal').style.display='none';
    });

    document.getElementById('communityDetailsReportForm').addEventListener('submit', async (e)=>{
        e.preventDefault();
        const reason = document.getElementById('communityDetailsReportReason').value.trim();
        const details = document.getElementById('communityDetailsReportDetails').value.trim();
        if(!reason) return alert('Please select a reason');
        try{
            const res = await fetch('/Community/ReportPost', {
                method:'POST',
                body: new URLSearchParams({ PostId: reportPostId, Reason: reason, Details: details })
            });
            const data = await res.json();
            if(data.success){
                document.getElementById('communityDetailsReportModal').style.display='none';
                window.location.reload();
            } else alert(data.message || 'Failed to report post');
        } catch(e){ console.error(e); alert('Error reporting post'); }
    });

    document.addEventListener("click", (event) => {
        const allMenus = document.querySelectorAll("[id^='post-menu-']");
        allMenus.forEach(menu => {
            const postId = menu.id.replace("post-menu-", "");
            const button = document.querySelector(`[onclick="togglePostMenu(${postId})"]`);
            if (!menu.contains(event.target) && !button?.contains(event.target)) {
                menu.style.display = "none";
            }
        });
    });

</script>