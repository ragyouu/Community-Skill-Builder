<!-- Home Section -->
<style>
    /* Home Section */
    .home-section {
        width: 100%;
        height: 100vh;
        background: linear-gradient(135deg, rgba(52, 74, 234, 0.8) 0%, rgba(95, 110, 247, 0.3) 60%, rgba(95, 110, 247, 0.0) 100%), url('/assets/Background Pics/LandingPageBG.png') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        position: relative;
    }

    .home-content {
        position: absolute;
        display: flex;
        flex-direction: column;
        align-items: left;
        text-align: left;
        left: 10%;
        width: 100%;
        max-width: 50%;
    }

        .home-content h1 {
            font-size: 5rem;
            margin-bottom: 1rem;
        }

        .home-content p {
            color: #FDFDFD;
            width: 60%;
            font-size: 1rem;
            margin-bottom: 3rem;
        }

    .home-buttons {
        display: flex;
        gap: 1rem;
    }

        .home-buttons .btn {
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
        }

    .explore {
        background-color: #344AEA;
        color: white;
    }

        .explore:hover {
            background-color: #1F2FA3;
        }

    .join {
        background-color: white;
        color: #344AEA;
    }

        .join:hover {
            background-color: #E0E4FF;
        }
</style>

<section class="home-section" id="home">
    <div class="home-content">
        @if (User.IsInRole("Artisan"))
        {
            <h1>
                Teach Your
                Craft
                Share our
                Culture
                Inspire the Next
            </h1>
            <p>
                Join a growing community of artisans preserving
                Philippine culture through online teaching. Inspire and
                pass on your legacy to the next generation.
            </p>
        }
        else
        {
            <h1>
                Stitching
                Tradition and
                Technology through
                Learning
            </h1>
            <p>
                Discover, learn, and preserve Philippine cultural and creative art skills through our community-based platform.
            </p>
        }

        <div class="home-buttons">
            <a asp-controller="Courses" asp-action="CourseCatalog" class="btn explore">Explore Courses ></a>
            <a asp-controller="Community" asp-action="CommunityHub" class="btn join">Join a community</a>
        </div>
    </div>
</section>