    #skip-verification-btn {
        margin-top: 1rem;
        background-color: #364BE9;
        color: white;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        #skip-verification-btn:hover {
            background-color: #253bbf;
        }

    .text-error {
        color: red;
        font-size: 0.75rem;
        margin-top: -0.5rem;
        margin-bottom: 0.8rem;
        display: block;
        font-weight: 500;
    }

    /* Interest Modal Styles */

    #interest-selection {
        display: none;
        flex-direction: column; /* stack vertically */
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 1rem;
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }

        #interest-selection h2.signup-header {
            margin-bottom: 1rem;
        }

    .interest-options {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
        margin: 1.5rem 0;
    }

    .interest-option {
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: background-color 0.2s, color 0.2s;
    }

        .interest-option.selected {
            background-color: #364BE9;
            color: white;
            border-color: #364BE9;
        }

    .interest-actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    #continue-interest-btn:disabled {
        background-color: #ccc;
        color: #666;
        cursor: not-allowed;
    }

    #continue-interest-btn:enabled {
        background-color: #364BE9;
        color: white;
    }
