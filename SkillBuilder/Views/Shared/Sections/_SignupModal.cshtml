<div id="signup-modal" class="auth-modal">
    <div class="auth-modal-content auth-modal-container">
        <span class="auth-close-btn" onclick="closeModal('signup-modal', true)">&times;</span>

        <!-- Left panel for image or illustration -->
        <div class="auth-modal-left">
            <img src="~/assets/Background Pics/LogInBG.png" />
        </div>

        <!-- Right panel for form and buttons -->
        <div class="auth-modal-right">
            <h2 style="margin-bottom: 1rem;" class="signup-header">Sign up to <span style="color: #364BE9; font-size: 27px;">Tahi</span></h2>

            @* <!-- Social login buttons -->
            <div class="social-login">
                <button id="btn-google-signup"><img src="~/assets/Logos/Google.svg">Continue with Google</button>
                <button id="btn-facebook-signup"><img src="~/assets/Logos/FacebookLogo.svg">Continue with Facebook</button>
            </div>

            <!-- Separator -->
            <div class="separator"><span>or</span></div>

            <!-- Continue with Email Button -->
            <button class="continue-email-btn" type="button" onclick="showSignupForm()">Continue with Email</button> *@

            <!-- Hidden form initially -->
            <form id="signup-form">

                @* <button type="button" class="back-social-btn" onclick="resetSignupModalView()">←</button> *@

                <div id="signup-inputs-wrapper">
                    <label for="signup-firstname">First Name</label>
                    <input type="text" id="signup-firstname" name="FirstName" required />
                    <span id="firstname-error" class="text-error"></span>

                    <label for="signup-lastname">Last Name</label>
                    <input type="text" id="signup-lastname" name="LastName" required />
                    <span id="lastname-error" class="text-error"></span>

                    <label for="signup-birthdate">Birthdate</label>
                    <input type="date" id="signup-birthdate" name="BirthDate" required max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span id="birthdate-error" class="text-error" style="margin-top: 0.3rem;"></span>

                    <label for="signup-email">Email Address</label>
                    <input type="email" id="signup-email" name="Email" required />
                    <div id="signup-email-error" class="text-error"></div>

                    <div class="password-group">
                        <label for="signup-password">Password</label>
                        <div class="password-wrapper">
                            <input type="password" id="signup-password" name="Password" required />
                            <span style="margin-top: -1rem;" class="toggle-password" onclick="togglePasswordVisibility('signup-password', this)">👁️‍🗨️</span>
                        </div>

                        <div id="password-requirements" class="password-requirements">
                            <p id="req-uppercase" class="requirement-text" data-text="At least one upper case letter">❌ At least one upper case letter</p>
                            <p id="req-number" class="requirement-text" data-text="At least one numeral (0–9)">❌ At least one numeral (0–9)</p>
                            <p id="req-symbol" class="requirement-text" data-text="At least one symbol (!#^*_- etc.)">❌ At least one symbol (!#^*_- etc.)</p>
                            <p id="req-length" class="requirement-text" data-text="Minimum 8 characters">❌ Minimum 8 characters</p>
                        </div>

                        <label for="signup-confirm">Confirm Password</label>
                        <div class="password-wrapper">
                            <input type="password" id="signup-confirm" name="ConfirmPassword" required />
                            <span style="margin-top: -1rem;" class="toggle-password" onclick="togglePasswordVisibility('signup-confirm', this)">👁️‍🗨️</span>
                        </div>

                        <p id="match-message" class="match-message">⚠️ Passwords do not match</p>
                    </div>

                    <div class="checkbox-signup">
                        <label class="checkbox-container">
                            <input type="checkbox" id="signup-agree" name="AgreeToTerms" />
                            <span class="checkmark"></span>
                        </label>
                        <p>
                            By creating an account you agree with our
                            <a href="#">Terms of Service</a>,
                            <a href="#">Privacy Policy</a>, and our default
                            <a href="#">Notification Settings</a>.
                        </p>
                    </div>

                    <button type="submit" class="modal-btn" id="signup-submit-btn" disabled>Create Account</button>

                    <p class="signup-error-message" style="color: red; margin-top: 10px; text-align: center;"></p>

                    @* <p class="signup-description">
                        By creating an account you agree with our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
                    </p> *@

                </div>

            </form>

            <div id="email-verification-message">
                <h3>Verify your email to continue</h3>
                <p>
                    A verification link has been sent to <strong id="obfuscated-email"></strong>.<br>
                    Please check your inbox and click the link to activate your account.
                </p>
                <p>
                    Didn’t receive it? Try checking your spam folder.
                </p>
                <button id="skip-verification-btn" class="modal-btn" type="button">
                    @(User.Identity.IsAuthenticated ? "Already Done ✅" : "Do it later")
                </button>
            </div>

            <!-- Interest Selection Modal -->
            <div id="interest-selection" style="display: none;">
                <h2 class="signup-header">What cultural arts are you interested in?</h2>
                <div id="interest-options" class="interest-options"></div>
                <div class="interest-actions">
                    <button id="skip-interest-btn" class="modal-btn">Skip</button>
                    <button id="continue-interest-btn" class="modal-btn" disabled>Continue</button>
                </div>
            </div>

            <p class="signup-redirect">
                Already have an account? <a href="#" onclick="switchToLogin()">Log In</a>
            </p>

            <div id="reset-password-section" style="display:none;">
                <h3>Reset Password</h3>
                <p>If the email address is valid you will have a One Time Password (OTP), via email. Please type it below.</p>

                <div class="input-group">
                    <label for="new-password">Password</label>
                    <input type="password" id="new-password" placeholder="New Password" />
                    <span class="toggle-password" data-target="new-password">👁️</span>
                </div>

                <div id="password-requirements" class="password-requirements">
                    <p id="req-uppercase" class="requirement-text">❌ At least one upper case letter</p>
                    <p id="req-number" class="requirement-text">❌ At least one numeral (0–9)</p>
                    <p id="req-symbol" class="requirement-text">❌ At least one symbol (!#^*_- etc.)</p>
                    <p id="req-length" class="requirement-text">❌ Minimum 8 characters</p>
                </div>

                <div class="input-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" id="confirm-password" placeholder="Confirm Password" />
                    <span class="toggle-password" data-target="confirm-password">👁️</span>
                </div>

                <button id="reset-password-btn" disabled>Reset Password</button>
            </div>

        </div>
    </div>
</div>

<script>

    window.addEventListener("beforeunload", function (e) {
        const modal = document.getElementById("signup-modal");
        if (modal && modal.style.display === "block") {
            e.preventDefault();
            e.returnValue = ""; // Standard for most browsers
        }
    });

    document.addEventListener("DOMContentLoaded", () => {
        let currentSignupEmail = null;
        const signupInputs = document.getElementById("signup-inputs-wrapper");
        const backSocialBtn = document.querySelector(".back-social-btn");
        const socialSection = document.querySelector(".social-login");
        const separator = document.querySelector(".separator");
        const continueEmailBtn = document.querySelector(".continue-email-btn");
        const birthdateInput = document.getElementById("signup-birthdate");
        if (birthdateInput) {
            const today = new Date().toISOString().split("T")[0];
            birthdateInput.setAttribute("max", today);
        }

        if (signupInputs) signupInputs.style.display = "block"; // show signup form
        // if (backSocialBtn) backSocialBtn.style.display = "none"; hide back button
        // if (socialSection) socialSection.style.display = "none"; hide social buttons
        // if (separator) separator.style.display = "none"; hide "or" separator
        // if (continueEmailBtn) continueEmailBtn.style.display = "none"; hide continue email button
        /* ---------------------------
         * Initialize Appwrite
         * --------------------------- */
        // if (!window.appwriteClient) {
        //     window.appwriteClient = new Appwrite.Client()
        //         .setEndpoint("https:fra.cloud.appwrite.io/v1")
        //         .setProject("689ad4040030d8902c02");
        //     window.appwriteAccount = new Appwrite.Account(window.appwriteClient);
        // }

        // const SUCCESS_URL = "https:localhost:7049/oauth/success";
        // const googleBtn = document.getElementById("btn-google-signup");
        // const facebookBtn = document.getElementById("btn-facebook-signup");

        // googleBtn?.addEventListener("click", () => {
        //     window.appwriteAccount.createOAuth2Session(
        //         "google",
        //         SUCCESS_URL,
        //         "https:localhost:7049/?error=OAuthFailed",
        //         ["openid", "email", "profile"]
        //     );
        // });

        // facebookBtn?.addEventListener("click", () => {
        //     window.appwriteAccount.createOAuth2Session(
        //         "facebook",
        //         SUCCESS_URL,
        //         "https:localhost:7049/?error=OAuthFailed"
        //     );
        // });

        /* ---------------------------
         * Interest Selection Modal
         * --------------------------- */
        const MAX_SELECTION = 3;
        const interestList = ["Pottery","Weaving","Shoemaking","Embroidery","Paper Crafts","Wood Carving"];

        const interestModal = document.getElementById("interest-selection");
        const interestContainer = document.getElementById("interest-options");
        const continueBtn = document.getElementById("continue-interest-btn");
        const skipBtn = document.getElementById("skip-interest-btn");
        let selectedInterests = [];

        // Render interest buttons
        function renderInterestOptions() {
            interestContainer.innerHTML = "";
            interestList.forEach(interest => {
                const btn = document.createElement("button");
                btn.type = "button";
                btn.textContent = interest;
                btn.classList.add("interest-option");
                btn.dataset.interest = interest;

                btn.addEventListener("click", () => {
                    const index = selectedInterests.indexOf(interest);
                    if (index > -1) {
                        selectedInterests.splice(index, 1);
                        btn.classList.remove("selected");
                    } else {
                        if (selectedInterests.length >= MAX_SELECTION) {
                            alert(`You can only select up to ${MAX_SELECTION} interests.`);
                            return;
                        }
                        selectedInterests.push(interest);
                        btn.classList.add("selected");
                    }
                    continueBtn.disabled = selectedInterests.length === 0;
                });

                interestContainer.appendChild(btn);
            });
        }

        // Global function to close interest modal
        window.closeInterestModal = function () {
            if (interestModal) interestModal.style.display = "none";
            const signupHeader = document.querySelector(".signup-header");
            if (signupHeader) signupHeader.style.display = "block";
        };

        // Skip button inside interest modal
        if (skipBtn) {
            skipBtn.addEventListener("click", async () => {
                try {
                    // Send empty interests to backend
                    const response = await fetch('/UserProfile/SaveInterests', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify([]) // empty array
                    });

                    if (!response.ok) throw new Error("Failed to save interests");


                } catch (err) {
                    console.error(err);
                    alert(err.message || "An error occurred while skipping interests.");
                }
            });
        }

        // Continue button inside interest modal
        if (continueBtn) {
            continueBtn.addEventListener("click", async () => {
                if (selectedInterests.length === 0) return;

                try {
                    const response = await fetch('/UserProfile/SaveInterests', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(selectedInterests)
                    });

                    if (!response.ok) throw new Error("Failed to save interests");

                    // ✅ Hide the entire interest modal
                    if (interestModal) {
                        interestModal.style.display = "none";
                    }

                    // ✅ Hide other signup stuff
                    const signupInputs = document.getElementById("signup-inputs-wrapper");
                    if (signupInputs) {
                        signupInputs.style.display = "none";
                    }

                    const signupHeader = document.querySelector(".signup-header");
                    if (signupHeader) {
                        signupHeader.style.display = "none";
                    }

                    const signupRedirect = document.querySelector(".signup-redirect");
                    if (signupRedirect) {
                        signupRedirect.style.display = "none";
                    }

                    const signupDescription = document.querySelector(".signup-description");
                    if (signupDescription) {
                        signupDescription.style.display = "none";
                    }

                    // ✅ Show only email verification message
                    const emailVerification = document.getElementById("email-verification-message");
                    if (emailVerification) {
                        emailVerification.style.display = "block";

                        const obfuscatedEmail = document.getElementById("obfuscated-email");
                        if (obfuscatedEmail) {
                            obfuscatedEmail.textContent = currentSignupEmail;
                        }
                    }

                } catch (err) {
                    console.error(err);
                    alert(err.message || "An error occurred while saving your interests.");
                }
            });
        }

        // “Do it later” button triggers interest modal
        const skipVerificationBtn = document.getElementById("skip-verification-btn");
        skipVerificationBtn?.addEventListener("click", (e) => {
            e.preventDefault();
            closeModal("signup-modal", true);
            window.location.href = "";
        });
    });
</script>