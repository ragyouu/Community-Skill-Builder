                content: '🔒';
                color: #666;
                flex-shrink: 0; /* ⭐ prevents the icon from wrapping */
            }

        .module-tab:hover:not(.locked) {
            background-color: #cde7fa;
        }

        .module-tab.active {
            background-color: #364BE9;
            color: white;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

    /* Right side */
    .module-content {
        width: 75%;
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.06);
        position: relative;
        min-height: 900px;
        max-height: 900px;
