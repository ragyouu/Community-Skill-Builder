        overflow-y: auto; /* enable vertical scroll if content is long */
    }

        .module-content h1 {
            font-size: 1.6rem;
            margin-bottom: 1rem;
            color: #344AEA;
        }

        .module-content p {
            font-size: 1rem;
            color: #444;
            line-height: 1.6;
        }

        .module-content button:disabled {
            background-color: #aaa !important;
            cursor: not-allowed !important;
            opacity: 0.6;
        }

    .centered-module-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: center;
        text-align: left;
    }

    video {
        border-radius: 8px;
        box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    }

    .module-tab.completed {
        background-color: #c0e8c0;
        font-weight: bold;
        position: relative;
    }

    .time-option {
        background-color: #eee;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }

        .time-option.selected {
            background-color: #344AEA;
            color: white;
            font-weight: bold;
        }

    .quiz-launch-btn, .session-launch-btn {
        padding: 1rem 2rem;
        background-color: #344AEA;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .quiz-launch-btn:hover, .session-launch-btn:hover {
            background-color: #263ebf;
        }

    #quizModal {
        display: none;
        position: fixed;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.6);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

        #quizModal.show {
            display: flex;
        }

    .quizModal-content {
