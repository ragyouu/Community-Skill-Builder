@using SkillBuilder.Models.ViewModels
@model ArtisanProfileViewModel

@{
    ViewData["Title"] = "Artisan Profile";
    ViewData["UseCourseNavbar"] = true;
}

<style>
    .artisan-profile {
        display: flex;
        align-items: flex-start; /* ensures top alignment */
        gap: 3rem;
        padding: 6rem 10rem;
        background-color: #f9f9f9;
    }

    .artisan-left {
        width: 30%;
        background-color: #E0F2FF;
        padding: 2rem;
        border-radius: 1rem;
        text-align: center;
        height: auto; /* ensure height adjusts */
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .artisan-avatar {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 100px;
        margin-bottom: 1rem;
    }

    .artisan-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
    }

    .artisan-profession {
        font-size: 1rem;
        color: #666;
    }

    .instructor-badge {
        margin-top: 1.5rem;
        background-color: #344AEA;
        color: #fff;
        padding: 0.5rem 1rem;
        display: inline-block;
        border-radius: 8px;
        font-weight: bold;
    }

    /* Right Section */
    .artisan-right {
        width: 70%;
    }

    .artisan-section {
        margin-bottom: 3rem;
    }

        .artisan-section h1 {
            font-size: 2rem;
            color: #344AEA;
            margin-bottom: 1rem;
        }

        .artisan-section p {
            font-size: 1rem;
            color: #444;
            line-height: 1.6;
        }

    /* My Work Gallery */
    .artisan-gallery {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .gallery-img {
        width: 200px;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    /* My Courses */
    .artisan-courses {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .course-card {
        width: 30%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s ease;
    }

        .course-card:hover {
            transform: scale(1.03);
        }

        .course-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

    .course-card-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 1rem;
        color: #333;
    }

    .course-card-desc {
        font-size: 0.9rem;
        margin: 0 1rem 1rem;
        color: #555;
    }

    /* Modal Styles */
    .work-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.7);
        justify-content: center;
        align-items: center;
    }

    .work-modal-content {
        background: #fff;
        border-radius: 10px;
        max-width: 700px;
        width: 90%;
        padding: 1.5rem;
        position: relative;
        animation: fadeIn 0.3s ease-in-out;
    }

    .work-close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        cursor: pointer;
    }

    .work-modal-body {
        text-align: center;
    }

    .modal-image {
        max-width: 100%;
        max-height: 400px;
        margin-bottom: 1rem;
        border-radius: 10px;
    }

    .modal-details {
        text-align: left;
    }

        .modal-details h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #344AEA;
        }

        .modal-details p {
            margin: 0.2rem 0;
            font-size: 1rem;
            color: #444;
        }

    }
</style>

<div class="artisan-profile">
    <!-- Left Section -->
    <div class="artisan-left">
        <img src="@(Model.Artisan.UserAvatar)" class="artisan-avatar" />
        @if (Model.Artisan.User != null)
        {
            <div class="artisan-name">@Model.Artisan.User.FirstName @Model.Artisan.User.LastName</div>
        }
        <div class="artisan-profession">@Model.Artisan.Profession, @Model.Artisan.Hometown</div>
        <div class="instructor-badge">Instructor</div>
    </div>

    <!-- Right Section -->
    <div class="artisan-right">
        <!-- About Me -->
        <div class="artisan-section">
            <h1>About</h1>
            <p>@Model.Artisan.Introduction</p>
        </div>

        <!-- My Work -->
        <div class="artisan-section">
            <h1>My Work</h1>
            @if (Model.ArtisanWorks != null && Model.ArtisanWorks.Any())
            {
                <div class="artisan-gallery">
                    @foreach (var work in Model.ArtisanWorks)
                    {
                        <img src="@work.ImageUrl"
                             alt="@work.Caption"
                             class="gallery-img"
                             data-title="@work.Title"
                             data-publish="@work.PublishDate.ToString("MMMM dd, yyyy")"
                             data-caption="@work.Caption" />
                    }
                </div>
            }
            else
            {
                <p style="color:#777; font-style:italic;">This artisan hasn’t shared any works yet.</p>
            }
        </div>

        <!-- Work Detail Modal -->
        <div id="workModal" class="work-modal">
            <div class="work-modal-content">
                <span class="work-close">&times;</span>
                <div class="work-modal-body">
                    <img id="modalImage" class="modal-image" src="" alt="Work Image" />
                    <div class="modal-details">
                        <h2 id="modalTitle"></h2>
                        <p id="modalDate"></p>
                        <p id="modalCaption"></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- My Courses -->
        <div class="artisan-section">
            <h1>My Courses</h1>
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <div class="artisan-courses">
                    @foreach (var course in Model.Courses)
                    {
                        <a href="@Url.Action("CourseCatalog", "Courses", new { selectedCourse = course.Link })" class="course-card">
                            <img src="@course.ImageUrl" alt="Course Image" />
                            <div class="course-card-title">@course.Title</div>
                            <div class="course-card-desc">@course.Overview</div>
                        </a>
                    }
                </div>
            }
            else
            {
                <p style="color:#777; font-style:italic;">This artisan hasn’t published any courses yet.</p>
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("workModal");
        const modalImage = document.getElementById("modalImage");
        const modalTitle = document.getElementById("modalTitle");
        const modalDate = document.getElementById("modalDate");
        const modalCaption = document.getElementById("modalCaption");
        const closeBtn = document.querySelector(".work-close");

        document.querySelectorAll(".gallery-img").forEach(img => {
            img.addEventListener("click", () => {
                console.log("Image clicked:", img); // Debug log
                modalImage.src = img.getAttribute("src");
                modalTitle.textContent = img.dataset.title;
                modalDate.textContent = `Published on: ${img.dataset.publish}`;
                modalCaption.textContent = img.dataset.caption;
                modal.style.display = "flex";
            });
        });

        closeBtn.addEventListener("click", () => modal.style.display = "none");
        modal.addEventListener("click", (e) => {
            if (e.target === modal) modal.style.display = "none";
        });
    });
</script>