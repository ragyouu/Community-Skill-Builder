@using SkillBuilder.Models.ViewModels
@model AdminProfileViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["UseCourseNavbar"] = true;
    ViewData["RequireLogin"] = true;
}

<style>
    .admin-profile-wrapper {
        display: flex;
        padding: 6rem 10rem;
        background-color: #f9f9f9;
        gap: 2.5rem;
    }

    .admin-sidebar {
        width: 22%;
        flex-shrink: 0; /* prevent it from shrinking */
        background-color: #E0F2FF;
        padding: 2rem 1.5rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }

    .admin-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .admin-name {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .admin-role {
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 1.5rem;
    }

    .admin-tabs {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 2rem;
    }

    .admin-tab {
        padding: 0.75rem;
        border: none;
        background-color: transparent;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        text-align: left;
        border-left: 4px solid transparent;
        transition: all 0.2s ease;
        color: #333;
    }

        .admin-tab:hover {
            background-color: #D6EBFF;
        }

        .admin-tab.active {
            border-left-color: #344AEA;
            background-color: #D6EBFF;
            color: #344AEA;
        }

    .admin-main {
        flex: 1 1 auto; /* allow grow and shrink for main panel */
        min-width: 0; /* prevent overflow issues inside flex */
        background-color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.06);
    }

    .admin-panel {
        display: none;
    }

        .admin-panel.active {
            display: block;
        }
</style>

<div class="admin-profile-wrapper">

    <!-- Sidebar -->
    <div class="admin-sidebar">
        <img src="@Model.Admin.UserAvatar" class="admin-avatar" />
        <div class="admin-name">@Model.Admin.User.FirstName @Model.Admin.User.LastName</div>
        <div class="admin-role">Administrator</div>

        <div class="admin-tabs">
            <button class="admin-tab active" data-tab="analytics">Analytics Overview</button>
            <button class="admin-tab" data-tab="learnerAnalytics">Learner Analytics</button>
            <button class="admin-tab" data-tab="artisanAnalytics">Artisan Analytics</button>
            <button class="admin-tab" data-tab="courseAnalytics">Course Analytics</button>
            <button class="admin-tab" data-tab="communityAnalytics">Community Analytics</button>
            <button class="admin-tab" data-tab="users">User Management</button>
            <button class="admin-tab" data-tab="artisans">Artisan Management</button>
            <button class="admin-tab" data-tab="applications">Artisan Applications</button>
            <button class="admin-tab" data-tab="courses">Course Management</button>
            <button class="admin-tab" data-tab="community">Community Management</button>
            <button class="admin-tab" data-tab="reports">Report Logs</button>
        </div>
    </div>

    <!-- Main Panel -->
    <div class="admin-main">
        <div class="admin-panel active" data-tab="analytics">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookAnalytics", Model)
        </div>
        <div class="admin-panel" data-tab="learnerAnalytics">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookLearnerAnalytics", Model)
        </div>
        <div class="admin-panel" data-tab="artisanAnalytics">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookArtisanAnalytics", Model)
        </div>
        <div class="admin-panel" data-tab="courseAnalytics">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookCourseAnalytics", Model)
        </div>
        <div class="admin-panel" data-tab="communityAnalytics">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookCommunityAnalytics", Model)
        </div>
        <div class="admin-panel" data-tab="users">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookUserManagement", Model)
        </div>
        <div class="admin-panel" data-tab="artisans">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookArtisanManagement", Model)
        </div>
        <div class="admin-panel" data-tab="applications">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookArtisanApplicationManagement", Model)
        </div>
        <div class="admin-panel" data-tab="courses">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookCourseManagement", Model)
        </div>
        <div class="admin-panel" data-tab="community">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookCommunityManagement", Model)
        </div>
        <div class="admin-panel" data-tab="reports">
            @Html.Partial("Sections/AdminNotebooks/_AdminNotebookReportLogs", Model)
        </div>
    </div>
</div>

<script>
    const tabs = document.querySelectorAll(".admin-tab");
    const panels = document.querySelectorAll(".admin-panel");

    tabs.forEach(tab => {
        tab.addEventListener("click", () => {
            tabs.forEach(t => t.classList.remove("active"));
            tab.classList.add("active");

            const selected = tab.getAttribute("data-tab");
            panels.forEach(panel => {
                panel.classList.toggle("active", panel.getAttribute("data-tab") === selected);
            });
        });
    });

    // Auto-open tab from query string
    const urlParams = new URLSearchParams(window.location.search);
    const openTab = urlParams.get("tab");

    if (openTab) {
        const targetTab = document.querySelector(`.admin-tab[data-tab="${openTab}"]`);
        const targetPanel = document.querySelector(`.admin-panel[data-tab="${openTab}"]`);

        if (targetTab && targetPanel) {
            // Remove active from all
            document.querySelectorAll(".admin-tab").forEach(t => t.classList.remove("active"));
            document.querySelectorAll(".admin-panel").forEach(p => p.classList.remove("active"));

            // Activate correct tab + panel
            targetTab.classList.add("active");
            targetPanel.classList.add("active");
        }
    }

    function switchToReportsTab(setPostFilter = false) {
        const reportTab = document.querySelector('.admin-tab[data-tab="reports"]');
        if (reportTab) {
            reportTab.click(); // Simulate click on the tab
        }

        const mainPanel = document.querySelector('.admin-main');
        if (mainPanel) mainPanel.scrollTop = 0; // Scroll to top

        if (setPostFilter) {
            const filterDropdown = document.getElementById("reportFilter");
            if (filterDropdown) {
                filterDropdown.value = "Post"; // set to community post
                filterReports(); // re-render filtered reports
            }
        }
    }

    // Use event delegation to handle dynamically loaded partial
    document.addEventListener('click', function(e) {
        if (e.target && e.target.id === 'reviewPostsLink') {
            e.preventDefault(); // Prevent default anchor behavior
            switchToReportsTab(true); // pass true to automatically set dropdown to "Post"
        }
    });
</script>